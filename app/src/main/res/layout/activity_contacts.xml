<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.settings.ContactsActivity">

    <RelativeLayout
        android:id="@+id/appBarContacts"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true"
        android:background="@color/actionBarStatus"
        app:elevation="0dp">

        <ImageView
            android:id="@+id/imgToolbarCont"
            android:layout_width="38dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/titleContacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/imgToolbarCont"
            android:layout_toRightOf="@+id/imgToolbarCont"
            android:gravity="center_vertical"
            android:text="@string/contacts"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp" />
    </RelativeLayout>


</RelativeLayout>